<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="actionBarTheme">@style/CustomActionBar</item>
        <item name="alertDialogTheme">@style/Theme.AlertDialog</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="TransparentTheme" parent="@android:style/Theme.NoDisplay">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="TitleStyle.Dialog" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="ButtonStyle.Dialog" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="Theme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/TitleStyle.Dialog</item>
        <item name="buttonBarButtonStyle">@style/ButtonStyle.Dialog</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="WindowTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="fontFamily">@font/product_sans_medium</item>
    </style>

    <style name="WindowContent" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>
</resources>
